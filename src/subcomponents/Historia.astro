      <div class="group relative">
        <img src="/historia/fernando-barajas.webp" alt="Fernando Barajas" class="w-full h-64 object-cover rounded-xl shadow-lg transition-transform duration-300 group-hover:scale-105" />
        <span class="absolute bottom-2 left-2 bg-teal-700/80 text-white px-3 py-1 rounded-xl text-xs shadow backdrop-blur-md">Dr. Fernando Barajas</span>
      </div>
      <div class="group relative">
        <img src="/historia/publicacion-dr-luciano-barajas.jpeg" alt="Publicación Dr. Luciano Barajas" class="w-full h-64 object-cover rounded-xl shadow-lg transition-transform duration-300 group-hover:scale-105" />
        <span class="absolute bottom-2 left-2 bg-teal-700/80 text-white px-3 py-1 rounded-xl text-xs shadow backdrop-blur-md">Publicación histórica</span>
      </div>
    </div>
  </div>
</section>